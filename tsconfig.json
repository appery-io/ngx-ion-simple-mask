{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "angularCompilerOptions": {
    "enableIvy": true
  },
  "include": ["src/**/*"]
}
